{
  "name": "hms_api",
  "version": "1.0.0",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "start:safe": "node start-server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js --runInBand --forceExit",
    "test:auth": "jest --config jest.integration.config.js src/__tests__/integration/auth.test.ts --runInBand --forceExit",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:setup": "mysql -u root -p < scripts/schema.sql",
    "db:reset": "mysql -u root -p -e \"DROP DATABASE IF EXISTS hms_db\" && npm run db:setup",
    "db:export": "ts-node scripts/export_db_schema.ts",
    "db:export-sql": "ts-node scripts/export_to_sql.ts",
    "db:auth-tables": "ts-node scripts/list_auth_tables.ts",
    "db:all-tables": "ts-node scripts/list_tables.ts",
    "clean": "rimraf build logs tsconfig.tsbuildinfo",
    "prebuild": "npm run clean",
    "postbuild": "echo Build completed successfully",
    "start:prod": "NODE_ENV=production node build/index.js",
    "build:check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.2",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.1.0",
    "@types/supertest": "^2.0.16",
    "axios": "^1.11.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
